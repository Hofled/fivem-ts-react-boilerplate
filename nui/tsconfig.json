{
    "compilerOptions": {
        "outDir": "./build",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": ["ES2017", "DOM"],
        "target": "es6",
        "jsx": "react",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "moduleResolution": "node"
